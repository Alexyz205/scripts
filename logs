#!/bin/bash

log() { echo -e "\e[34m[LOG] $1\e[0m"; }
log_error() { echo -e "\e[31m[LOG] ERROR: $1\e[0m"; }
error_exit() { log_error "$1"; exit 1; }

log_install() { echo -e "\e[32m[INSTALL] $1\e[0m"; }
log_setup() { echo -e "\e[34m[SETUP] $1\e[0m"; }
log_symlink() { echo -e "\e[36m[SYMLINK] $1\e[0m"; }
